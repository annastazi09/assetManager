mixin panel(panel_title, panel_bttn)
	div.block_panel
				div.bttn.clickable.btn_dash= panel_bttn				
mixin simplify_panel(panel_title)
	div.block_panel
				p.title= panel_title
				div.popup_info_trigger.clickable
					i.icon-help
					div.popup_info= lorem1
					
mixin form_block(panel_title, input_class)
	div.single_field
		div.block_title
			div.title= panel_title
			div.popup_info_trigger.clickable
				i.icon-help
				div.popup_info= lorem1
		input(class= input_class, placeholder="Reissue asset")
	